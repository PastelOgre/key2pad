{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "key2pad: build release",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "key2pad: build debug",
            "type": "shell",
            "command": "make",
            "args": ["debug"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "key2pad: clean",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "key2pad: run release",
            "type": "shell",
            "command": "${workspaceFolder}/bin/release/key2pad",
            "windows": { "command": "${workspaceFolder}/bin/release/key2pad.exe" },
            "options": { "cwd": "${workspaceFolder}" },
            "group": "test",
            "dependsOn": "key2pad: build release",
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        },
        {
            "label": "key2pad: run debug",
            "type": "shell",
            "command": "${workspaceFolder}/bin/debug/key2pad",
            "windows": { "command": "${workspaceFolder}/bin/debug/key2pad.exe" },
            "options": { "cwd": "${workspaceFolder}" },
            "group": "test",
            "dependsOn": "key2pad: build debug",
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": []
        }
    ]
}
